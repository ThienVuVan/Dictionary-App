<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor1"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

        <ImageButton
            android:id="@+id/backButtontext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="back"
            android:src="@drawable/ic_search"
            app:tint="@color/white" />

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Search..."
            android:inputType="text"
            android:padding="5dp"
            android:textSize="14dp" />
    </androidx.appcompat.widget.Toolbar>

    <Button
        android:id="@+id/btnVietAnh"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/buttonColor"
        android:drawableLeft="@drawable/ic_search"
        android:gravity="center_vertical"
        android:text="\t\tTra cứu tiếng việt - tiếng anh"
        android:textColor="@color/textColor"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnTextTrans"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/buttonColor"
        android:drawableLeft="@drawable/ic_txt"
        android:gravity="center_vertical"
        android:text="\t\t\t\t\t\t\tDịch văn bản"
        android:textColor="@color/textColor"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnYourword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/buttonColor"
        android:drawableLeft="@drawable/ic_list"
        android:gravity="center_vertical"
        android:text="\t\t\t\t\t\t\tTừ của bạn"
        android:textColor="@color/textColor"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/buttonColor"
        android:drawableLeft="@drawable/ic_menu_history"
        android:gravity="center_vertical"
        android:text="\t\t\t\t\t\t\t\tTừ đã tra"
        android:textColor="@color/textColor"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/buttonColor"
        android:drawableLeft="@drawable/ic_list"
        android:gravity="center_vertical"
        android:text="\t\t\t\t\t\t\t\t\tCài đặt"
        android:textColor="@color/textColor"
        android:textSize="16dp" />

</LinearLayout>