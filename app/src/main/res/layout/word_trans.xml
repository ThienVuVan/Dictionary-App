<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    app:layoutDescription="@xml/word_trans_scene">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <!-- Thêm nút back -->
        <ImageButton
                android:id="@+id/backButtontext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="back"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/white"/>

        <!--        <TextView-->
        <!--            android:id="@+id/toolbar_title"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_centerInParent="true"-->
        <!--            android:paddingLeft="16dp"-->
        <!--            android:text="hello"-->
        <!--            android:textColor="@color/white"-->
        <!--            android:textSize="20sp" />-->

        <ImageButton
                android:id="@+id/favorButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="favor"
                android:src="@drawable/ic_favor"
                app:tint="@color/white"/>

        <ImageButton
                android:id="@+id/noteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="note"
                android:src="@drawable/ic_note"
                app:tint="@color/white"/>

        <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="search"
                android:src="@drawable/ic_search"
                app:tint="@color/white"/>


        <EditText
                android:id="@+id/txtSearch"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_search"
                android:drawableRight="@drawable/ic_keyboard"
                android:hint="Search..."
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14dp"/>


    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="64dp">

            <TextView
                android:id="@+id/word_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:text="word"
                android:textColor="#1565C0"
                android:textSize="35sp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/volumeButton"
                android:layout_width="51dp"
                android:layout_height="31dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="volume"
                android:padding="10dp"
                android:src="@drawable/ic_volume" />
        </LinearLayout>
        <TextView
            android:id="@+id/part_of_speech_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TranslatedText : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/translated_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 defination \n\n 2 another" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Definitions : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/definitions_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 defination \n\n 2 another \n\n 3 third" />

        <TextView
            android:id="@+id/synonyms_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Synonyms : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/synonyms_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asad, asaad, asdia ,asdajod" />

        <TextView
            android:id="@+id/antonyms_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Antonyms : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/antonyms_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="asad, asaad, asdia ,asdajod" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Example : "
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/example_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 defination \n\n 2 another" />

    </LinearLayout>

</LinearLayout>